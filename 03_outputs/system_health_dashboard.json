      {
        "id": 7,
        "title": "CPU 사용률 추이",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 6,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "\nfrom(bucket: \"econ_market\")\n  |> range(start: v.timeRangeStart, stop: v.timeRangeStop)\n  |> filter(fn: (r) => r._measurement == \"cpu\")\n  |> filter(fn: (r) => r._field == \"usage_idle\")\n  |> aggregateWindow(every: 1m, fn: mean, createEmpty: false)\n  |> map(fn: (r) => ({r with _value: 100.0 - r._value, _field: \"사용률\"}))\n            ",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 20,
              "lineWidth": 2
            },
            "color": {
              "fixedColor": "blue",
              "mode": "fixed"
            }
          }
        }
      },
      {
