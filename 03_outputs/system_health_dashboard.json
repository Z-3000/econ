        },
        "targets": [
          {
            "datasource": {
              "type": "influxdb",
              "uid": "influxdb"
            },
            "query": "\nfrom(bucket: \"econ_market\")\n  |> range(start: -5m)\n  |> filter(fn: (r) => r._measurement == \"cpu\")\n  |> filter(fn: (r) => r._field == \"usage_idle\")\n  |> last()\n  |> map(fn: (r) => ({r with _value: 100.0 - r._value}))\n            ",
            "refId": "A"
